<UserControl x:Class="AutumnBox.GUI.View.Panel.PanelMainV2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Panel"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:controls="clr-namespace:AutumnBox.GUI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Bottom"  Effect="{StaticResource EffectShadow4}"  CornerRadius="0" Background="{DynamicResource BorderBrush}">
                <DockPanel>
                    <controls:StatusBar DockPanel.Dock="Bottom" Effect="{StaticResource EffectShadow4}"  Height="20"/>
                    <hc:Divider LineStroke="{DynamicResource SecondaryTextBrush}"  DockPanel.Dock="Bottom" Margin="0" />
                </DockPanel>
            </Border>
            <hc:ScrollViewer>
                <controls:XCardsViewer DockPanel.Dock="Left"/>
            </hc:ScrollViewer>

            <controls:ExtensionsFinder Padding="0,10,0,0" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</UserControl>

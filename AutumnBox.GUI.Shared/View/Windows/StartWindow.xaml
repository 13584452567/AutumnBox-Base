<controls:Window
    ShowInTaskbar="False"
    xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
    x:Class="AutumnBox.GUI.View.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI.View.Windows"
        mc:Ignorable="d"
    ShowTitle="True"
    Style="{StaticResource WindowWin10}"
    WindowStyle="ToolWindow"
    BorderThickness="1"
    ResizeMode="NoResize"
    FontFamily="{DynamicResource AutumnBox.Font}"
    WindowStartupLocation="CenterScreen"
        Title="AutumnBox" Height="300" Width="400">
    <DockPanel>
        <controls:LoadingLine Margin="0,0,0,30" DockPanel.Dock="Bottom"/>
        <Grid DockPanel.Dock="Top">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="50">AutumnBox</TextBlock>
        </Grid>
    </DockPanel>
</controls:Window>

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.UI"
        mc:Ignorable="d"
        Title="ChoiceBox" Height="320.282" Width="484.225" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="White">

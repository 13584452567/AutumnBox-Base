        <Label x:Name="labelTitle" Content="Something...." HorizontalAlignment="Left" VerticalAlignment="Top" Width="484" Height="52" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontFamily="Microsoft YaHei UI Light" Background="#FF009AD6" MouseMove="labelTitle_MouseMove"/>

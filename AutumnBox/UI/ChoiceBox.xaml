        <Button Content="{DynamicResource OK}" HorizontalAlignment="Left" Margin="247,282,0,0" VerticalAlignment="Top" Width="165" Background="White" Height="28" Click="Button_Click"/>
        <TextBlock x:Name="textBlockContent" TextAlignment="Center" HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" Text="Content" VerticalAlignment="Top" Height="211" Width="464" FontFamily="Microsoft YaHei UI Light" FontSize="18" Background="White"/>

    </Grid>
</Window>

<UserControl x:Class="AutumnBox.GUI.UI.Cstm.MessageBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="703" Height="240" Background="{DynamicResource BasicBrush}" MinWidth="400" MinHeight="300" Foreground="{x:Null}">
    <Grid Background="{DynamicResource BackBrush}" Margin="3,3,3,3">
        <TextBlock x:Name="TBTitle" Margin="10,10,10,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" FontSize="48" FontFamily="Microsoft YaHei UI Light" Foreground="{DynamicResource ForgBrush}"/>
        <TextBlock x:Name="TBContent" Margin="10,79,10,41" TextWrapping="Wrap" Text="TextBlock" FontSize="22" FontFamily="Microsoft YaHei UI Light" Foreground="{DynamicResource ForgBrush}"/>
        <Button x:Name="BtnOK" Content="{DynamicResource btnOK}" Margin="3,0,7,3" Background="#007C7272" BorderBrush="{DynamicResource BorderBrush}" FontSize="18" FontFamily="Microsoft YaHei UI Light" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="{DynamicResource ForgBrush}" RenderTransformOrigin="0.494,0.085" Height="33" VerticalAlignment="Bottom" Click="BtnOK_Click"/>
    </Grid>
</UserControl>

<Grid x:Class="AutumnBox.GUI.UI.Cstm.CstmTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.UI.Cstm"
             mc:Ignorable="d" MinWidth="300" Height="0" MaxHeight="70" MinHeight="40" Background="{DynamicResource BasicBrush}" MouseDown="Grid_MouseDown" >
    <Image HorizontalAlignment="Left" Margin="4,1,0,5" Width="32" Source="/AutumnBox;component/title_icon.ico" RenderTransformOrigin="0.579,-1.368"/>
    <Label Name="Title" Content="{DynamicResource AppName}" Foreground="White" Margin="41,0,94,0" FontFamily="Microsoft YaHei Light" FontSize="15" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
    <Image Name="ImgClose" Margin="0,1,9,1" Source="/AutumnBox;component/Resources/DynamicIcons/close_normal.png" MouseEnter="ImgClose_MouseEnter" MouseLeave="ImgClose_MouseLeave" MouseDown="ImgClose_MouseDown" HorizontalAlignment="Right" Width="25"/>
    <Image Name="ImgMin" Margin="0,1,45,2" Source="/AutumnBox;component/Resources/DynamicIcons/min_normal.png" MouseEnter="ImgMin_MouseEnter" MouseLeave="ImgMin_MouseLeave" MouseDown="ImgMin_MouseDown" HorizontalAlignment="Right" Width="24" Stretch="Fill" Visibility="Hidden"/>
</Grid>
<UserControl x:Class="AutumnBox.GUI.UI.Cstm.PotdBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.UI.Cstm"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200" Loaded="UserControl_Loaded">
    <Grid>
        <Image x:Name="ImgMain" RenderOptions.BitmapScalingMode="Fant" MouseDown="ImgMain_MouseDown"/>
        <Grid Visibility="Hidden" x:Name="LBtnClose" Background="#66000000" Height="16" VerticalAlignment="Top" HorizontalAlignment="Right" Width="16" Margin="0,1,1,0" MouseDown="LBtnClose_MouseDown" >
            <Image  RenderOptions.BitmapScalingMode="Fant" Source="/AutumnBox;component/Resources/Images/Btn/close_normal.png" />
        </Grid>
        <TextBlock Visibility="Hidden"  TextAlignment="Center" x:Name="TBCountDown" Text="5" Margin="162,0,1,102" FontSize="36" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
    </Grid>
</UserControl>

        <Button Style="{DynamicResource AtmbxButtonStyle}" x:Name="ButtonRebootToSystem" Content="{DynamicResource btnSystem}" Margin="0,40,0,0" VerticalAlignment="Top" Height="36"   FontSize="14"  Click="ButtonRebootToSystem_Click"  HorizontalAlignment="Left" Width="130"/>

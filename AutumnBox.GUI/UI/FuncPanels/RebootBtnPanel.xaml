        <Button Style="{DynamicResource AtmbxButtonStyle}" x:Name="ButtonRebootToSnapdragon9008" Content="{DynamicResource btnSnapdragon9008}" Margin="0,85,0,0" VerticalAlignment="Top" Height="36"  FontSize="14"   Click="ButtonRebootToSnapdragon9008_Click" HorizontalAlignment="Left" Width="130"/>

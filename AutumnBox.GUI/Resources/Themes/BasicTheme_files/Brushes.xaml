<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="BtnBrush" Color="#50535353"></SolidColorBrush>
    <SolidColorBrush x:Key="ForgBrushOnBasic" Color="#FF000000"/>
    <SolidColorBrush x:Key="ForgBrush" Color="{DynamicResource FontColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FFABADB3"/>
    <SolidColorBrush x:Key="BackBrush" Color="{DynamicResource BackColor}"/>
    <SolidColorBrush x:Key="BasicBrush" Color="#FF009AD6"/>
</ResourceDictionary>
<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI"
        xmlns:cstm="clr-namespace:AutumnBox.GUI.UI.Cstm"
        xmlns:grids="clr-namespace:AutumnBox.GUI.UI.Grids"
        x:Name="_MainWindow" x:Class="AutumnBox.GUI.MainWindow"
        mc:Ignorable="d"
        Background="{DynamicResource BackBrush}" Title="AutumnBox" Height="682.667" Width="1155" Foreground="#FF1B1919" ResizeMode="NoResize" Loaded="MainWindow_Loaded" AllowsTransparency="True" WindowStyle="None">
    <Grid Name="GridBase" Margin="3,0,3,3">
        <cstm:CstmTitleBar x:Name="TitleBar" Height="35" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="-1,41,0,0" VerticalAlignment="Top" Height="1" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Foreground="{x:Null}" Width="1149"/>
        <Grid Name="GridMain" Background="#00E5E5E5" Margin="0,42,0,-13" Height="651" VerticalAlignment="Top">
            <grids:RebootBtnPanel x:Name="RebootGrid" Margin="0,12,23,0" HorizontalAlignment="Right" Width="265" VerticalAlignment="Top" Height="126" BorderBrush="{DynamicResource BorderBrush}"/>
            <grids:DeviceInfoPanel x:Name="DevInfoPanel" Margin="10,0,0,0" Height="222" VerticalAlignment="Top" HorizontalAlignment="Left" Width="650"/>
            <Button Foreground="{DynamicResource ForgBrush}" x:Name="buttonStartShell"  Content="{DynamicResource btnADBCMD}" Margin="861,170,23,0" VerticalAlignment="Top" Height="52" Background="{x:Null}" BorderBrush="{DynamicResource BorderBrush}" FontSize="14" FontFamily="Microsoft YaHei UI Light" Click="ButtonStartShell_Click" />
            <Button Foreground="{DynamicResource ForgBrush}" x:Name="BtnSettings"  Content="{DynamicResource btnSetting}" Margin="939,590,6,0" VerticalAlignment="Top" Height="35" Background="{x:Null}" BorderBrush="{DynamicResource BorderBrush}" FontSize="14" FontFamily="Microsoft YaHei UI Light" Click="BtnSettings_Click" />
            <Button Foreground="{DynamicResource ForgBrush}" x:Name="BtnAbout"  Content="{DynamicResource btnAbout}" Margin="939,550,6,0" VerticalAlignment="Top" Height="35" Background="{x:Null}" BorderBrush="{DynamicResource BorderBrush}" FontSize="14" FontFamily="Microsoft YaHei UI Light" Click="BtnAbout_Click" />
            <Image Source="/AutumnBox;component/Resources/Icons/donate.png" HorizontalAlignment="Left" Height="25" Margin="939,518,0,0" VerticalAlignment="Top" Width="26"/>
            <TabControl Name="TabFunctions" Background="{x:Null}" BorderBrush="{DynamicResource BasicBrush}" Margin="10,227,221,28">
                <TabItem TabIndex="1" Header="{DynamicResource tbiOnPowerOn}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Margin="-2,0,0,0" HorizontalAlignment="Left" Width="200" Background="{DynamicResource BasicBrush}" Foreground="{DynamicResource ForgBrushOnBasic}" FontFamily="Microsoft YaHei UI Light" FontSize="16">
                    <grids:PoweronFuncPanel x:Name="PoweronFuncs" Margin="0,0,-2,0"></grids:PoweronFuncPanel>
                </TabItem>
                <TabItem TabIndex="2" Header="{DynamicResource tbiOnRecovery}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Margin="-2,0,0,0" HorizontalAlignment="Left" Width="200" Background="{DynamicResource BasicBrush}" Foreground="{DynamicResource ForgBrushOnBasic}" FontFamily="Microsoft YaHei UI Light" FontSize="16">
                    <grids:RecFuncPanel x:Name="RecoveryFuncs"/>
                </TabItem>
                <TabItem  TabIndex="3" Header="{DynamicResource tbiOnFastboot}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Margin="-2,0,0,0" HorizontalAlignment="Left" Width="200" Background="{DynamicResource BasicBrush}" Foreground="{DynamicResource ForgBrushOnBasic}" FontFamily="Microsoft YaHei UI Light" FontSize="16">
                    <grids:FastbootFuncPanel x:Name="FastbootFuncs"></grids:FastbootFuncPanel>
                </TabItem>
            </TabControl>
            <Label Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}" Content="" Margin="0,7,299,0" HorizontalAlignment="Right" Width="1" Height="218" VerticalAlignment="Top"/>
            <TextBox Foreground="{DynamicResource ForgBrush}" x:Name="textBoxGG" Height="88" Margin="939,255,10,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" IsReadOnly="True" Background="{x:Null}" FontSize="14"/>
            <ListBox x:Name="DevicesListBox" DisplayMemberPath="Serial" Height="191" Margin="0,31,311,0" VerticalAlignment="Top" SelectionChanged="DevicesListBox_SelectionChanged" Background="#00000000" Foreground="{DynamicResource BasicBrush}" BorderBrush="#FFABADB3" HorizontalAlignment="Right" Width="179"/>
            <Label Content="{DynamicResource Devices}" Foreground="{DynamicResource ForgBrush}" Margin="0,0,311,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="179"/>
            <TextBlock x:Name="TBHelpLink" HorizontalAlignment="Left" Margin="939,348,0,0" TextWrapping="Wrap" Text="{DynamicResource btnHelp}" VerticalAlignment="Top" TextDecorations="Underline" Foreground="{DynamicResource BasicBrush}" FontSize="16" MouseDown="TextBlock_MouseDown"/>
            <TextBlock x:Name="TBLinkHelpLink" HorizontalAlignment="Left" Margin="939,377,0,0" TextWrapping="Wrap" Text="{DynamicResource LinkHelp}" VerticalAlignment="Top" TextDecorations="Underline" Foreground="{DynamicResource BasicBrush}" FontSize="16" MouseDown="TBLinkHelpLink_MouseDown"/>
            <TextBlock x:Name="TBDonate" HorizontalAlignment="Left" Margin="970,522,0,0" TextWrapping="Wrap" Text="{DynamicResource Donate}" VerticalAlignment="Top" TextDecorations="Underline" Foreground="{DynamicResource BasicBrush}" FontSize="16" MouseDown="TBDonate_MouseDown"/>
        </Grid>

    </Grid>
</Window>

<UserControl x:Class="AutumnBox.GUI.View.Panel.PanelMainV2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Panel"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:controls="clr-namespace:AutumnBox.GUI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <DockPanel>
            <controls:PanelListView Padding="0,0,0,20" DockPanel.Dock="Left"/>
            <controls:ExtensionsPanel Padding="0,0,20,0"/>
        </DockPanel>
        <Border VerticalAlignment="Bottom" Effect="{StaticResource EffectShadow1}"  CornerRadius="5" Background="{DynamicResource BorderBrush}">
            <controls:BottomBar Effect="{StaticResource EffectShadow4}"  Height="20" Background="{DynamicResource BorderBrush}" DockPanel.Dock="Bottom"/>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="AutumnBox.GUI.View.Panel.PanelMainV2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Panel"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:controls="clr-namespace:AutumnBox.GUI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <DockPanel>
            <controls:PanelListView DockPanel.Dock="Left"/>
            <controls:ExtensionsFinder DockPanel.Dock="Right"/>
        </DockPanel>

        <Border Height="20" VerticalAlignment="Bottom">
            <Border.Effect>
                <BlurEffect Radius="5" KernelType="Gaussian"></BlurEffect>
            </Border.Effect>
            <controls:StatusBar/>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="AutumnBox.GUI.View.Panel.PanelLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Panel"
             xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
             mc:Ignorable="d" 
             FontFamily="{DynamicResource AutumnBox.Font}"
             Width="800"
            Background="White">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" Text="{DynamicResource LoadingAppName}"/>
            <TextBlock Text="{DynamicResource AppDesc}" FontSize="30" Margin="5" HorizontalAlignment="Center"/>
            <controls:LoadingLine/>
        </StackPanel>
        <TextBlock x:Name="TBSentence" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Gray" Margin="10"/>
    </Grid>
</UserControl>

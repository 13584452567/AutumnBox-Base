<UserControl x:Class="AutumnBox.GUI.View.Controls.ExtensionDock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Controls"
             mc:Ignorable="d" 
            Height="120" Width="120" MouseDoubleClick="UserControl_MouseDoubleClick">
    <StackPanel Margin="10" ToolTip="{Binding Info.FormattedDesc}">
        <Image HorizontalAlignment="Center" Height="60" Source="{Binding Info.Icon}"/>
        <TextBlock TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0" Text="{Binding Info.Name}"/>
    </StackPanel>
</UserControl>

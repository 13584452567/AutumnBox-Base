<UserControl x:Class="AutumnBox.GUI.View.Controls.RebootBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Controls"
             xmlns:viewmodel="clr-namespace:AutumnBox.GUI.ViewModel"
             mc:Ignorable="d" 
                    FontFamily="{DynamicResource AutumnBox.Font}">
    <UserControl.DataContext>
        <viewmodel:VMReboot/>
    </UserControl.DataContext>
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="{DynamicResource PanelRebootTitle}" Margin="10" FontSize="15" HorizontalAlignment="Center"/>
            <WrapPanel DockPanel.Dock="Right">
                <Button  Margin="5" Command="{Binding ToSystem}"  Content="{DynamicResource PanelRebootToSystem}" />
                <Button  Margin="5"  Command="{Binding ToRecovery}" Content="{DynamicResource PanelRebootToRecovery}"/>
                <Button  Margin="5"  Command="{Binding ToFastboot}" Content="{DynamicResource PanelRebootToFastboot}" />
                <Button  Margin="5" Command="{Binding To9008}" Content="{DynamicResource PanelRebootTo9008}" />
            </WrapPanel>

        </DockPanel>
    </Grid>
</UserControl>

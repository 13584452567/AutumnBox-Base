<Window x:Class="AutumnBox.GUI.Windows.FlowResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI.Windows"
        mc:Ignorable="d"
        Title="FlowResultWindow" Height="407" Width="460" WindowStyle="None" ResizeMode="NoResize" Background="{DynamicResource BasicBrush}" MouseDown="Window_MouseDown">
    <Grid Margin="3,3,3,3" Background="{DynamicResource BackBrush}">
        <Button  x:Name="BtnClose"   Content="{DynamicResource btnClose}" Margin="4,359,0,0" VerticalAlignment="Top" Height="35" Background="#007C7272" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" FontFamily="Microsoft YaHei UI Light" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Black" RenderTransformOrigin="0.494,0.085" HorizontalAlignment="Left" Width="446" Click="BtnClose_Click"/>
        <TextBlock x:Name="TxtBTitle" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TheFuck" VerticalAlignment="Top" Width="436" Height="67" FontSize="48"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,82,0,0" TextWrapping="Wrap" Text="{DynamicResource Message}" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="TxtBAdviseTip" HorizontalAlignment="Left" Margin="10,158,0,0" TextWrapping="Wrap" Text="{DynamicResource Advise}" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="TxtBMessage" HorizontalAlignment="Left" Margin="62,82,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="384" Height="74" FontSize="20"/>
        <TextBlock x:Name="TxtBAdvise" HorizontalAlignment="Left" Margin="62,158,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="384" Height="74" FontSize="20"/>
        <TextBox x:Name="TxtBOutput" HorizontalAlignment="Left" Height="117" Margin="4,237,0,0" TextWrapping="Wrap" Text="Output" VerticalAlignment="Top" Width="446" IsReadOnly="True"/>
    </Grid>
</Window>

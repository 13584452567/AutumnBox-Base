<Window x:Class="AutumnBox.GUI.Windows.AppLoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI.Windows"
        mc:Ignorable="d"
        Title="AppLoadingWindow" Height="288" Width="419.5" WindowStyle="None" ResizeMode="NoResize" Background="{DynamicResource BackBrush}" WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
    <Grid>
        <Image HorizontalAlignment="Left" Height="288" VerticalAlignment="Top" Width="420" Source="/AutumnBox.GUI;component/Resources/Images/loading.jpg" Stretch="Fill"/>
        <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="{DynamicResource AppName}" VerticalAlignment="Top" Foreground="White" FontSize="72" FontFamily="Microsoft YaHei UI Light" Margin="0,10,0,0"/>
        <ProgressBar x:Name="PrgBar" Margin="0,0,0,89" BorderBrush="{x:Null}" Height="4" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="TBTip" TextAlignment="Right" Margin="10,0,10,61" TextWrapping="Wrap" Text="{DynamicResource msgLoading}" FontFamily="Microsoft YaHei UI Light" FontSize="18" Height="24" VerticalAlignment="Bottom" Foreground="White"/>
    </Grid>
</Window>
